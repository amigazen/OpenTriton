CC	= sc

CFLAGS	= LINK LIB=lib:triton.lib NOICONS

all: Demo EnvPrint trLogo ToolManager1 ToolManager2 ToolManager3 ProgInd CustomClass

Demo: Demo.c
	@$(CC) $(CFLAGS) $@
	delete $@.o $@.lnk

EnvPrint: EnvPrint.c
	@$(CC) $(CFLAGS) $@
	delete $@.o $@.lnk

trLogo: trLogo.c
	@$(CC) $(CFLAGS) $@
	delete $@.o $@.lnk

ToolManager1: ToolManager1.c
	@$(CC) $(CFLAGS) $@
	delete $@.o $@.lnk

ToolManager2: ToolManager2.c
	@$(CC) $(CFLAGS) $@
	delete $@.o $@.lnk

ToolManager3: ToolManager3.c
	@$(CC) $(CFLAGS) $@
	delete $@.o $@.lnk

ProgInd: ProgInd.c
	@$(CC) $(CFLAGS) $@
	delete $@.o $@.lnk

CustomClass: CustomClass.c
	@$(CC) $(CFLAGS) MATH=standard $@
	delete $@.o $@.lnk
